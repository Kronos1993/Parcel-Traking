<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZipCargoTraking" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemTextAppearance">@style/menuItem</item>
        <item name="bottomNavigationStyle">@style/Widget.BottomNavigationView</item>
    </style>


    <style name="Theme.ZipCargoTraking.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:elevation">0dp</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="Theme.RemittCoin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RemittCoin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="menuItem" parent="android:TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/menuItem</item>
        <item name="android:background">@color/whiteText</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/backgroundColor</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NoActionBarNuevo">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SpinnerSolid" parent="Widget.AppCompat.Spinner">
        <!--<item name="android:background">@drawable/rounded_text_view_stroke</item>-->
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
    </style>


    <style name="TextViewRound" parent="Theme.ZipCargoTraking">
        <!--<item name="android:background">@drawable/rounded_editview</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/margin_10</item>
        <item name="android:layout_marginEnd">@dimen/margin_10</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/margin_10</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="badge" parent="Theme.ZipCargoTraking">
        <item name="android:background">@drawable/badge_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/backgroundCardColor</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardCornerRadius">@dimen/card_radius_6</item>
        <item name="android:layout_margin">@dimen/margin_5</item>
        <item name="contentPadding">@dimen/margin_5</item>
    </style>

    <style name="Widget.CardView.NoBackground" parent="Widget.Material3.CardView.Filled">
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardCornerRadius">@dimen/card_radius_6</item>
        <item name="android:layout_margin">@dimen/margin_5</item>
        <item name="contentPadding">@dimen/margin_5</item>
    </style>

    <style name="Widget.TextView.TextViewRound" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:layout_marginStart">@dimen/margin_10</item>
        <item name="android:layout_marginEnd">@dimen/margin_10</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/margin_10</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Widget.TextView.TextViewDisplay1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Widget.TextView.TextViewHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Widget.TextView.TextViewSubHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Widget.TextView.TextViewSmall" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="Widget.TextView.TextViewNormal" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Widget.NormalButton" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/margin_10</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

    <style name="Widget.OutlinedButton" parent="Widget.Material3.Button.IconButton.Outlined">
        <item name="android:textColor">@color/outlined_button_color</item>
        <item name="cornerRadius">@dimen/margin_10</item>
        <item name="strokeColor">@color/outlined_button_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="iconTint">@color/outlined_button_color</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="errorTextAppearance">@color/alertColor</item>
        <item name="android:layout_marginStart">@dimen/margin_10</item>
        <item name="android:layout_marginEnd">@dimen/margin_10</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
    </style>

    <style name="RatingBarStyle" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlActivated">@color/stars_color</item>
    </style>


    <style name="BottomSheetTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="background">@drawable/layout_topcorners_round_white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/circle_progress_bar</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorOnSurfaceVariant">@color/colorPrimaryVariant</item>
    </style>

</resources>