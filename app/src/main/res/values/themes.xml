<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZipCargoTraking" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemTextAppearance">@style/menuItem</item>
    </style>


    <style name="Theme.ZipCargoTraking.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:elevation">0dp</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="Theme.RemittCoin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RemittCoin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="menuItem" parent="android:TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/menuItem</item>
        <item name="android:background">@color/whiteText</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/backgroundColor</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NoActionBarNuevo">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SpinnerSolid" parent="Widget.AppCompat.Spinner">
        <!--<item name="android:background">@drawable/rounded_text_view_stroke</item>-->
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
    </style>


    <style name="TextViewRound" parent="Theme.ZipCargoTraking">
        <!--<item name="android:background">@drawable/rounded_editview</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/margin_10</item>
        <item name="android:layout_marginEnd">@dimen/margin_10</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/margin_10</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="badge" parent="Theme.ZipCargoTraking">
